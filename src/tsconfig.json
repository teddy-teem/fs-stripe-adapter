{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": false,
    "target": "ES2017",
    "sourceMap": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "noImplicitAny": true,
    "skipLibCheck": true,
  },
  "include": [
    "**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "files": true
  }
}
